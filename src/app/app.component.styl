.header
  background-color #489BC6
  height 50px
  color #ffffff
  display flex
  align-items center
  font-family 'Quicksand', sans-serif
  position fixed
  top 0
  left 0
  width 100%
  z-index 10

  .title
    font-size 20px
    padding-left 10px

.canvas-area
  overflow scroll
  width 100%
  background-color #ffffff
  padding 50px
  max-width 610px
  margin 20px auto

.main-canvas
  height 500px
  width 500px

.cooker
  display none

.canvas-wrapper
  border 1px solid #e0e0e0
  width 500px
  height 500px
  position relative
  display: inline-block

.main-pane
  display flex

  .processor
    flex 1

    .mixup-button
      border: 1px solid #ddd
      padding: 10px
      cursor: pointer
      border-radius: 5px
      color: #666
      background: #ffffff
      font-family 'Quicksand', sans-serif
      margin 0 20px 10px
      height 36px

      &:active
        background #ddd
        color #fff

    .message
      margin 0 20px
      font-size 12px
      font-family 'Quicksand', sans-serif
      line-height 1.4
      text-align center

  .uploaders
    flex 1
    .upload-row
      display flex
      align-items center
      justify-content center
      margin-bottom 10px

      .label
        font-size 12px
        margin-right 10px
        font-family 'Quicksand', sans-serif
        width 80px
        text-align right

      .original-btn
        border: 1px solid #ddd
        padding: 10px
        cursor: pointer
        border-radius: 5px
        color: #666
        background: #ffffff
        font-family 'Quicksand', sans-serif

      .thumbnail
        height 35px
        width 35px
        background-position center
        background-repeat no-repeat
        background-size contain
        background-color #e0e0e0
        margin-left 10px
        border-radius 5px


$main-color=#489BC6


.dialog-container
  background-color rgba(0,0,0,0.7)
  position fixed
  top 0
  left 0
  height 100%
  width 100%

.editor-dialog
  background-color #ffffff
  border-radius 5px
  width 90%

  .header
    height 40px
    width 100%
    display flex
    align-items center
    justify-content center
    background-color $main-color
    color #ffffff
    position relative
    border-top-left-radius 5px
    border-top-right-radius 5px

    .label
      font-size 18px

    .close-button
      height 20px
      width 20px
      border-radius 5px
      color $main-color
      position absolute
      right 10px
      top 10px
      background-color #ffffff
      cursor pointer
      font-size 16px

      &:hover
        opacity .8

  .body
    display flex
    padding 20px
    color #616161

    .image
      width 50%


.button
  height 40px
  width 200px
  background-color $main-color
  border-radius 5px
  color #ffffff
  font-size 14px
  cursor pointer

  &:hover
    opacity .8

  &.save
    margin 0 auto 20px

  &.disabled
    background-color #e0e0e0
    pointer-events none
    cursor default

.canvas
  height 400px
  width 400px


.add-button
  flex-direction column
  background-color $main-color
  border-radius 5px
  color #ffffff
  font-size 12px
  cursor pointer
  height 150px
  width 150px

  &:hover
    opacity .8

  .ichigo-jam
    width 80%

  .led
    height 60%

  .label
    margin-top 10px
